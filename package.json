{
  "name": "NuxtWeb",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && npx simple-git-hooks",
    "lint": "eslint --ext .ts,.js,.vue .",
    "lint:fix": "eslint --ext .ts,.js,.vue . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "element-plus": "^2.11.8",
    "nuxt": "^4.2.1",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@unocss/nuxt": "^66.5.9",
    "unocss": "^66.5.9",
    "@nuxt/eslint": "latest",
    "@nuxt/eslint-config": "latest",
    "eslint": "^9.14.0",
    "@eslint/js": "^9.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "eslint-plugin-vue": "^9.27.0",
    "vue-eslint-parser": "^10.2.0",
    "@typescript-eslint/parser": "^8.46.2",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint && npm run format:check"
  }
}
